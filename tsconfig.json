{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "lib": ["ES2020"],
    "module": "ES2020",
    "moduleResolution": "node",
    "target": "ES2020",

    // "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    // "target": "es2017",
    "sourceMap": true,
    // rootDir should be the project's root dir because there are
    // ts files in src, test, and perhaps other folders or files.
    // Even though only src is compiled, we have ts files in test
    // folder and in scripts folder.
    "rootDir": "./",
    // outDir is mandatory so that tsc compiles everything to dist folder
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "strictNullChecks": true,
    "paths": {

    },
    "types": ["node", "jest"],

    // "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },
  "exclude": ["node_modules", "dist"]
}
