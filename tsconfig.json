{
  "compilerOptions": {
    "lib": ["ES2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2020",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "rootDir": "./",
    // outDir is mandatory so that tsc compiles everything to dist folder
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "strictNullChecks": true,
    // "types": ["node", "jest"],
  },
  "exclude": ["node_modules", "dist"]
}
