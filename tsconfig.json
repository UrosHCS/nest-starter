{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "lib": ["ES2020"],
    "module": "ES2020",
    "moduleResolution": "node",
    "target": "ES2020",

    // "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    // "target": "es2017",
    "sourceMap": true,
    // rootDir, outDir and baseUrl are still in question
    // "rootDir": "./src",
    // outDir is mandatory so that tsc compiles everything to dist folder
    "outDir": "./dist",
    // "baseUrl": "./dist",
    "incremental": true,
    "strictNullChecks": true,

    // "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },
  "exclude": ["node_modules", "dist"]
}
